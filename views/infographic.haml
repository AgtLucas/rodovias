%html
%head
	%meta{:charset => "utf-8"}
	%title Infográfico dos Acidentes nas Rodovias Brasileiras
	%link{:href=>'normalize.css', :rel => 'stylesheet', :type => "text/css"}
	%link{:rel => "stylesheet", :type => "text/css", :href => "style.css"}
	%link{:rel => "stylesheet", :type => "text/css", :href => "nv.d3.css"}
	%link{:rel => "stylesheet", :type => "text/css", :href => "infographic.css"}
	%script{:type => "text/javascript", :src => "scripts/d3.v2.min.js"}
	%script{:type => "text/javascript", :src => "scripts/nv.d3.min.js"}
	%script{:type => "text/javascript", :src => "scripts/infographic.js"}
%body
	%div#chart1
		%h3 Número de acidentes nas rodovias do brasil
		%svg
	%table
		%thead
			%tr
				%th Estado
				%th Acidentes
				%th Razão
				%th Mortes
		%tbody
			%tr
				%td RS
				%td
					%span.chart{ :style => "width: 100%;" } 1000
				%td Velocidade
				%td 100
			%tr
				%td SC
				%td
					%span.chart{ :style => "width: 30%;" } 300
				%td Velocidade
				%td 100
			%tr
				%td PR
				%td
					%span.chart{ :style => "width: 40%;" } 400
				%td Velocidade
				%td 100
			%tr
				%td SP
				%td
					%span.chart{ :style => "width: 70%;" } 700
				%td Velocidade
				%td 100